<header>
  <div class="bg-warning py-2">
    Some top header info
  </div>

  <nav id="navbar_top" class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="#">Brand</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main_nav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="main_nav">
        <ul class="navbar-nav ms-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to I18n.t('menus.about'), 'javascript:void(0)', class: ' nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to I18n.t('menus.contact'), 'javascript:void(0)', class: ' nav-link' %>
            </li>
            <li class="nav-item">
              <%=link_to I18n.t('menus.product'), 'javascript:void(0)', class: ' nav-link' %>
            </li>
            <li class="nav-item">
              <%=link_to I18n.t('menus.signout'), destroy_user_session_path, data:{ confirm: 'Are you sure?', method: 'delete'}, class: ' nav-link' %>
            </li>
            <% else %>
              <li class="nav-item">
                <%= link_to I18n.t('btn.signin'), new_user_session_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to I18n.t('btn.signup'), new_user_registration_path, class: 'nav-link' %>
              </li>
              <% end %>
        </ul>

  </nav>
</header>