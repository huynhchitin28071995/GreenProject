<section id='products' class='container' name='product'>
  <div id="products-carousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">

      <% @products.each_with_index do |product, index|%>
        <div class='carousel-item <%=index == 0 ? 'active' : '' %>' tags='<%=product.id%>'>
          <%= image_pack_tag product.image , class: 'product-img' %>
          <div class="carousel-caption d-none d-md-block">
            <%= render partial: 'shared/product/partials/item_info', locals: {product: product} %>
          </div>
          <div class='events'>
            <%= render partial: 'shared/product/item', locals: {product: product}%>
          </div>
        </div>
      <% end %>

    </div>
    <a class="carousel-control-prev" href="#products-carousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#products-carousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</section>
